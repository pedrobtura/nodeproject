<%- include("partials/_header") %>

<div class="container mt-5">
    <div class="row">
        <div clas="col md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%- data.id %> " method="POST">
                        <input type="text" name="name" value="<%- data.name %> " class="form-control mb-2" autofocus />
                        <input type="email" name="address" value="<%- data.address %> " class="form-control mb-2" />
                        <input type="text" name="phone" value="<%- data.phone %> " class="form-control mb-2" />
                        <button type="submit" class="btn btn-info">Edit customer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/_footer") %>